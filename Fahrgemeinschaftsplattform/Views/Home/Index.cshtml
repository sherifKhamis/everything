@{
    ViewData["Title"] = "Startseite"; // Legt den Titel für die Startseite fest
    Layout = "_Layout"; // Legt das Layout der Seite fest
}

<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Die Fahrgemeinschaftsplattform</title>
    <style>
        /* Allgemeine Stile */
        * {
            margin: 0; /* Entfernt Standardabstände */
            padding: 0; /* Entfernt Standardinnenabstände */
            box-sizing: border-box; /* Inkludiert padding und border in Breite und Höhe */
            font-family: Arial, sans-serif; /* Setzt Schriftart auf Arial */
        }

        body {
            background-color: black; /* Hintergrundfarbe auf Schwarz setzen */
        }

        /* Hero Section */
        .hero {
            background: black; /* Hintergrundfarbe auf Schwarz setzen */
            background-size: cover; /* Hintergrundbild vollständig abdecken */
            min-height: 50vh; /* Mindesthöhe der Hero-Sektion */
            display: flex;
            flex-direction: column; /* Anordnung der Kinder in einer Spalte */
            justify-content: center; /* Zentriert die Kinder vertikal */
            align-items: center; /* Zentriert die Kinder horizontal */
            text-align: center; /* Textzentrierung */
            color: white; /* Textfarbe auf Weiß setzen */
            padding: 20px; /* Innenabstand */
        }

            .hero img {
                width: 500px; /* Bildbreite festlegen */
                height: auto; /* Höhe automatisch anpassen */
                margin-bottom: 50px; /* Abstand nach unten */
            }

            .hero h1 {
                font-size: 36px; /* Schriftgröße des Titels */
                margin-bottom: 10px; /* Abstand nach unten */
            }

            .hero p {
                font-size: 18px; /* Schriftgröße des Textes */
                margin-top: 20px; /* Abstand nach oben */
                margin-bottom: 20px; /* Abstand nach unten */
            }

        .btn {
            display: inline-block; /* Inline-Block-Element für Schaltflächen */
            padding: 10px 20px; /* Innenabstand */
            margin: 10px; /* Außenabstand */
            font-size: 16px; /* Schriftgröße */
            text-decoration: none; /* Entfernt Unterstreichung */
            color: white; /* Textfarbe */
            background-color: #007bff; /* Hintergrundfarbe */
            border-radius: 5px; /* Runde Ecken */
            transition: background-color 0.3s;/* Übergangseffekt für die Hintergrundfarbe */
            margin-bottom: 20px;
        }

            .btn:hover {
                background-color: #0056b3; /* Ändert die Hintergrundfarbe bei Hover */
            }

        /* Features Section */
        .features {
            padding: 40px; /* Innenabstand */
            text-align: center; /* Textzentrierung */
            margin-bottom: 100px; /* Abstand nach unten */
        }

            .features h2 {
                margin-bottom: 20px; /* Abstand nach unten */
                font-size: 36px; /* Schriftgröße des Titels */
            }

        .feature-cards {
            display: flex; /* Flexbox für Kartenanordnung */
            gap: 20px; /* Abstand zwischen den Karten */
            justify-content: center; /* Zentriert die Karten */
            flex-wrap: wrap; /* Karten umbrechen, wenn der Platz begrenzt ist */
        }

        .card {
            background-color: #9f9f9f; /* Hintergrundfarbe der Karten */
            color: white; /* Textfarbe */
            padding: 20px; /* Innenabstand */
            border-radius: 8px; /* Runde Ecken */
            width: 300px; /* Breite der Karte */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Schatteneffekt */
        }

            .card h3 {
                margin-bottom: 10px; /* Abstand nach unten */
            }

            .card p {
                font-size: 16px; /* Schriftgröße des Textes */
            }

        /* Footer */
        .footer {
            background-color: #9f9f9f; /* Hintergrundfarbe des Footers */
            color: white; /* Textfarbe */
            text-align: center; /* Textzentrierung */
            padding: 20px; /* Innenabstand */
            font-size: 14px; /* Schriftgröße */
        }
    </style>
</head>
<body>

    <!-- Hero Section -->
    <header class="hero">
        <img src="~/images/mercedes-benz-on-phone.png" alt="Mercedes-Benz auf Telefon" /> <!-- Hero-Bild -->
        <div class="hero-text">
            <h1>Finde deine ideale Fahrgemeinschaft</h1> <!-- Hauptüberschrift -->
            <p>Spare Kosten, schütze die Umwelt und lerne neue Leute kennen.</p> <!-- Beschreibender Text -->
            <!-- Registrieren-Button -->
            <a asp-controller="Account" asp-action="Register" class="btn">Jetzt registrieren</a> <!-- Verlinkt zur Registrierung -->

            <p>Bereits Nutzer?</p>

            <!-- Einloggen-Button -->
            <a asp-controller="Account" asp-action="Login" class="btn">Jetzt einloggen</a> <!-- Verlinkt zum Login -->
        </div>
    </header>

    <!-- Features Section -->
    <section id="features" class="features">
        <h2>Unsere Funktionen</h2> <!-- Funktionen-Überschrift -->
        <div class="feature-cards">
            <div class="card">
                <h3>Routenplanung</h3> <!-- Titel der Funktion -->
                <p>Finde die besten Routen und Fahrgemeinschaften passend zu deinem Ziel.</p> <!-- Beschreibung der Funktion -->
            </div>
            <div class="card">
                <h3>CO₂ Tracker</h3>
                <p>Verfolge deinen Beitrag zur CO₂-Reduktion durch die Nutzung unserer Plattform.</p>
            </div>
        </div>
    </section>
</body>
</html>
