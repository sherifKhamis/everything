@{
    ViewData["Title"] = "Startseite";
}

<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Die Fahrgemeinschaftsplattform</title>
    <style>
        /* Allgemeine Stile */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, sans-serif;
        }

        body {
            background-color: black;
        }


        /* Hero Section */
        .hero {
            background: black;
            background-size: cover;
            min-height: 50vh;
            display: flex;
            flex-direction: column; /* Anordnung vertikal */
            justify-content: center;
            align-items: center;
            text-align: center;
            color: white;
            padding: 20px;
        }

        .hero img {
            width: 500px; /* Größe des Bildes anpassen */
            height: auto;
            margin-bottom: 50px; /* Abstand zwischen Bild und Text */
        }

        .hero h1 {
            font-size: 36px;
            margin-bottom: 10px;
        }

        .hero p {
            font-size: 18px;
            margin-top: 100px;
            margin-bottom: 50px;
        }

        .btn-hero-btn 
        {
            margin:  25px;
        }

        /* Features Section */
        .features {
            padding: 40px;
            text-align: center;
            margin-bottom: 100px;
        }

        .features h2 {
            margin-bottom: 20px;
            font-size: 36px;
        }

        .feature-cards {
            display: flex;
            gap: 20px;
            justify-content: center;
            flex-wrap: wrap;
        }

        .card {
            background-color: #9f9f9f;
            color:white;
            padding: 20px;
            border-radius: 8px;
            width: 300px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .card h3 {
            margin-bottom: 10px;
        }

        .card p {
            font-size: 16px;
        }

        /* Footer */
        .footer {
            background-color: #9f9f9f;
            color: white;
            text-align: center;
            padding: 20px;
            font-size: 14px;
        }
    </style>
</head>
<body>

    <!-- Hero Section -->
    <header class="hero">
        <img src="images/mercedes-benz-on-phone.png" />
        <div class="hero-text">
            <h1>Finde deine ideale Fahrgemeinschaft</h1>
            <p>Spare Kosten, schütze die Umwelt und lerne neue Leute kennen.</p>

            <!-- Registrieren-Button -->
            <a asp-controller="Account" asp-action="Register" class="btn hero-btn">Jetzt registrieren</a>

            <p>Bereits Nutzer?</p>

            <!-- Einloggen-Button -->
            <a asp-controller="Account" asp-action="Login" class="btn hero-btn">Jetzt einloggen</a>
        </div>
    </header>


    <!-- Features Section -->
    <section id="features" class="features">
        <h2>Unsere Funktionen</h2>
        <div class="feature-cards">
            <div class="card">
                <h3>Routenplanung</h3>
                <p>Finde die besten Routen und Fahrgemeinschaften passend zu deinem Ziel.</p>
            </div>
            <div class="card">
                <h3>Kostenteilung</h3>
                <p>Automatische Berechnung und faire Aufteilung der Fahrtkosten.</p>
            </div>
            <div class="card">
                <h3>CO₂ Tracker</h3>
                <p>Verfolge deinen Beitrag zur CO₂-Reduktion durch die Nutzung unserer Plattform.</p>
            </div>
        </div>
    </section>

    <!-- JavaScript -->
    <script>
        // Einfache Navigation auf der Seite durch Scrollen zu den Abschnitten
        document.querySelectorAll('.nav-links a').forEach(link => {
            link.addEventListener('click', function (e) {
                e.preventDefault();
                const targetId = this.getAttribute('href').substring(1);
                document.getElementById(targetId).scrollIntoView({ behavior: 'smooth' });
            });
        });
    </script>
</body>
</html>
