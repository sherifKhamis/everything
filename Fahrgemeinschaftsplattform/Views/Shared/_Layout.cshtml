@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Die Fahrgemeinschaftsplattform</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar">
        <div class="container">
            <!-- Zentriertes Logo -->
            <div class="navbar-center">
                <img src="~/images/mercedes_benz_ag_logo.jpeg" alt="Logo" class="navbar-logo" />
            </div>
            <ul class="nav-links">
                <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
            </ul>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="footer">
        <p>&copy; 2024 Die Fahrgemeinschaftsplattform. Alle Rechte vorbehalten.</p>
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
