@model Fahrgemeinschaftsplattform.Models.RegisterViewModel

@{
    Layout = "_Layout"; // Legt das Layout der Seite fest
}

<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registrierung - Die Fahrgemeinschaftsplattform</title>
    <style>
        /* Allgemeine Stile */
        * {
            margin: 0; /* Entfernt Standardabstände */
            padding: 0; /* Entfernt Standardinnenabstände */
            box-sizing: border-box; /* Inkludiert padding und border in Breite und Höhe */
            font-family: Arial, sans-serif; /* Schriftart auf Arial setzen */
        }

        body {
            display: flex;
            justify-content: center; /* Zentriert den Inhalt horizontal */
            align-items: flex-start; /* Positioniert den Inhalt oben */
            min-height: 100vh; /* Setzt die minimale Höhe auf die gesamte Bildschirmhöhe */
            background-color: black; /* Hintergrundfarbe auf Schwarz setzen */
            color: white; /* Textfarbe auf Weiß setzen */
            padding-top: 200px; /* Abstand zum oberen Rand */
        }

        /* Register-Container */
        .register-container {
            background-color: #9f9f9f; /* Hintergrundfarbe des Containers */
            padding: 40px; /* Innenabstand */
            border-radius: 8px; /* Runde Ecken */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* Schatteneffekt */
            width: 300px; /* Breite des Containers */
            text-align: center; /* Zentriert den Text */
            margin-top: 20px; /* Abstand nach oben */
        }

            .register-container h1 {
                font-size: 24px; /* Schriftgröße des Titels */
                margin-bottom: 20px; /* Abstand nach unten */
            }

            .register-container label {
                display: block; /* Block-Element für Platz darunter */
                text-align: left; /* Text links ausrichten */
                margin-bottom: 8px; /* Abstand nach unten */
                font-size: 14px; /* Schriftgröße */
            }

            .register-container input[type="text"],
            .register-container input[type="password"] {
                width: 100%; /* Füllt die gesamte Breite des Containers */
                padding: 10px; /* Innenabstand */
                margin-bottom: 20px; /* Abstand nach unten */
                border: none; /* Keine Umrandung */
                border-radius: 4px; /* Runde Ecken */
                font-size: 14px; /* Schriftgröße */
            }

            .register-container button {
                background-color: #0078D6; /* Hintergrundfarbe des Buttons */
                color: white; /* Textfarbe */
                padding: 10px 20px; /* Innenabstand */
                border: none; /* Keine Umrandung */
                border-radius: 5px; /* Runde Ecken */
                font-size: 16px; /* Schriftgröße */
                cursor: pointer; /* Zeigt Hand-Cursor an */
                transition: background-color 0.3s; /* Übergangseffekt für die Hintergrundfarbe */
                margin-bottom: 20px; /* Abstand nach unten */
            }

                .register-container button:hover {
                    background-color: #008DFC; /* Ändert die Hintergrundfarbe bei Hover */
                }

        .alert-success, .alert-error {
            padding: 10px; /* Innenabstand */
            border-radius: 5px; /* Runde Ecken */
            margin-bottom: 20px; /* Abstand nach unten */
            font-size: 16px; /* Schriftgröße */
            text-align: center; /* Text zentrieren */
            color: white; /* Textfarbe */
        }

        .alert-success {
            background-color: #28a745; /* Hintergrundfarbe für Erfolgsmeldung */
        }

        .alert-error {
            background-color: #dc3545; /* Hintergrundfarbe für Fehlermeldung */
        }

        .password-requirements {
            font-size: 12px; /* Schriftgröße der Passwortanforderungen */
            color: #333; /* Textfarbe */
        }
    </style>
</head>
<body>
    <div class="register-container">
        @* Erfolgs- und Fehlermeldungen anzeigen *@
        @if (ViewData["SuccessMessage"] != null)
        {
            <div class="alert-success">
                @ViewData["SuccessMessage"] 
            </div>
        }
        @if (ViewData["ErrorMessage"] != null)
        {
            <div class="alert-error">
                @ViewData["ErrorMessage"] 
            </div>
        }

        <h1>Registrieren</h1> <!-- Titel der Seite -->
        <!-- Registrierungsformular -->
        <form asp-action="Register" method="post">
            <div>
                <label asp-for="Email">Email</label> <!-- E-Mail-Label -->
                <input asp-for="Email" type="text" /> <!-- E-Mail-Eingabefeld -->
            </div>
            <div>
                <label asp-for="Password">Passwort</label> <!-- Passwort-Label -->
                <input asp-for="Password" type="password" /> <!-- Passwort-Eingabefeld -->
            </div>
            <div>
                <label asp-for="Name">Name</label> <!-- Name-Label -->
                <input asp-for="Name" type="text" /> <!-- Name-Eingabefeld -->
            </div>
            <button type="submit">Registrieren</button> <!-- Button zum Absenden des Formulars -->

            <p class="password-requirements">Das Passwort muss mindestens 4 Zeichen lang sein.</p> <!-- Passwortanforderungen anzeigen -->
        </form>
    </div>
</body>
</html>
