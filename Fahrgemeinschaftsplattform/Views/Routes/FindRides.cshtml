@{
    Layout = "_Layout"; // Legt das Layout der Seite fest
}

<h2 style="text-align: center; margin-top: 20px; color: white;">Passende Fahrten finden</h2> <!-- Überschrift der Seite -->

<div class="find-rides-container">
    <div class="route-card">
        <!-- Formular zur Eingabe der Suchkriterien für passende Fahrten -->
        <form asp-action="FindRides" method="post">
            <!-- Eingabefeld für Start-Latitude -->
            <div class="form-group">
                <label for="startLat">Start Latitude</label>
                <input type="number" class="form-control" id="startLat" name="startLat" step="any" required>
            </div>

            <!-- Eingabefeld für Start-Longitude -->
            <div class="form-group">
                <label for="startLon">Start Longitude</label>
                <input type="number" class="form-control" id="startLon" name="startLon" step="any" required>
            </div>

            <!-- Eingabefeld für End-Latitude -->
            <div class="form-group">
                <label for="endLat">End Latitude</label>
                <input type="number" class="form-control" id="endLat" name="endLat" step="any" required>
            </div>

            <!-- Eingabefeld für End-Longitude -->
            <div class="form-group">
                <label for="endLon">End Longitude</label>
                <input type="number" class="form-control" id="endLon" name="endLon" step="any" required>
            </div>

            <!-- Eingabefeld für gewünschte Abfahrtszeit -->
            <div class="form-group">
                <label for="requestedDeparture">Gewünschte Abfahrtszeit</label>
                <input type="datetime-local" class="form-control" id="requestedDeparture" name="requestedDeparture" required>
            </div>

            <!-- Button zum Absenden des Formulars -->
            <button type="submit" class="btn">Passende Fahrten finden</button>
        </form>
    </div>
</div>

<style>
    /* Container und Karten-Stile */
    .find-rides-container {
        display: flex;
        justify-content: center; /* Zentriert den Container horizontal */
        padding: 20px;
        margin-top: 20px;
    }

    .route-card {
        background-color: #9f9f9f; /* Hintergrundfarbe der Karte */
        color: white; /* Textfarbe */
        padding: 20px; /* Innenabstand */
        border-radius: 8px; /* Runde Ecken */
        width: 400px; /* Breite der Karte */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Schatteneffekt */
        text-align: center; /* Textzentrierung */
    }

    /* Stil für die Formularfelder */
    .form-group {
        margin-bottom: 15px; /* Abstand nach unten */
        text-align: left; /* Text linksbündig */
    }

    .form-control {
        width: 100%; /* Breite des Eingabefelds */
        padding: 8px; /* Innenabstand */
        margin-top: 5px; /* Abstand nach oben */
        font-size: 16px; /* Schriftgröße */
        border: none; /* Keine Umrandung */
        border-radius: 4px; /* Runde Ecken */
    }

    /* Stil für den Absende-Button */
    .btn {
        display: inline-block;
        padding: 10px 20px; /* Innenabstand */
        font-size: 16px; /* Schriftgröße */
        color: white; /* Textfarbe */
        background-color: #007bff; /* Hintergrundfarbe */
        border: none; /* Keine Umrandung */
        border-radius: 5px; /* Runde Ecken */
        transition: background-color 0.3s; /* Übergangseffekt für Hintergrundfarbe */
        cursor: pointer; /* Zeigt Hand-Cursor an */
    }

        .btn:hover {
            background-color: #0056b3; /* Ändert die Hintergrundfarbe bei Hover */
        }
</style>
