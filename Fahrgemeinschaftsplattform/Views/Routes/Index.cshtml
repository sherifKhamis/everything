@model IEnumerable<Fahrgemeinschaftsplattform.Models.Route>

@{
    Layout = "_Layout"; // Legt das Layout der Seite fest
}

<h2 style="text-align: center; margin-top: 20px; color: white;">Alle Fahrten</h2> <!-- Überschrift der Seite -->

<div class="actions">
    <!-- Button zum Erstellen einer neuen Fahrt -->
    <a asp-controller="Routes" asp-action="Create" class="btn action-btn">Neue Fahrt erstellen</a>

    <!-- Button zum Suchen passender Fahrten -->
    <a asp-controller="Routes" asp-action="FindRides" class="btn action-btn">Passende Fahrten finden</a>
</div>

<div class="routes-container">
    <!-- Schleife durch alle Fahrten im Model, um sie als Karten anzuzeigen -->
    @foreach (var route in Model)
    {
        <div class="route-card">
            <h3>Fahrt von Start zu Ziel</h3> <!-- Titel der Fahrt -->
            <p><strong>Fahrer:</strong> @route.FahrerName</p> <!-- Fahrername anzeigen -->
            <p><strong>Start Koordinaten:</strong> @route.StartLatitude.ToString("F6", System.Globalization.CultureInfo.InvariantCulture), @route.StartLongitude.ToString("F6", System.Globalization.CultureInfo.InvariantCulture)</p> <!-- Startkoordinaten anzeigen -->
            <p><strong>Ziel Koordinaten:</strong> @route.EndLatitude.ToString("F6", System.Globalization.CultureInfo.InvariantCulture), @route.EndLongitude.ToString("F6", System.Globalization.CultureInfo.InvariantCulture)</p> <!-- Zielkoordinaten anzeigen -->
            <p><strong>Abfahrtszeit:</strong> @route.Abfahrtszeit.ToString("dd.MM.yyyy HH:mm")</p> <!-- Formatierte Abfahrtszeit anzeigen -->
            <p><strong>Verfügbare Plätze:</strong> @route.VerfuegbareSitze</p> <!-- Verfügbare Sitzplätze anzeigen -->
        </div>
    }
</div>

<style>
    /* Stile für die Aktions-Buttons */
    .actions {
        display: flex;
        justify-content: center; /* Zentriert die Buttons horizontal */
        gap: 20px; /* Abstand zwischen den Buttons */
        margin-bottom: 20px; /* Abstand nach unten */
    }

    .action-btn {
        display: inline-block;
        padding: 10px 20px; /* Innenabstand */
        font-size: 16px; /* Schriftgröße */
        text-decoration: none; /* Entfernt Unterstreichung */
        color: white; /* Textfarbe */
        background-color: #007bff; /* Hintergrundfarbe */
        border-radius: 5px; /* Runde Ecken */
        transition: background-color 0.3s; /* Übergangseffekt für Hintergrundfarbe */
    }

        .action-btn:hover {
            background-color: #0056b3; /* Ändert die Hintergrundfarbe bei Hover */
        }

    /* Stile für die Fahrtenübersicht */
    .routes-container {
        display: flex;
        flex-wrap: wrap; /* Zeilenumbruch bei Platzmangel */
        gap: 20px; /* Abstand zwischen den Karten */
        justify-content: center; /* Zentriert die Karten */
        padding: 20px; /* Innenabstand */
    }

    .route-card {
        background-color: #9f9f9f; /* Hintergrundfarbe der Karte */
        color: white; /* Textfarbe */
        padding: 20px; /* Innenabstand */
        border-radius: 8px; /* Runde Ecken */
        width: 300px; /* Breite der Karte */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Schatteneffekt */
        text-align: center; /* Textzentrierung */
    }

        .route-card h3 {
            font-size: 24px; /* Schriftgröße des Titels */
            margin-bottom: 10px; /* Abstand nach unten */
        }

        .route-card p {
            font-size: 16px; /* Schriftgröße des Textes */
            margin: 5px 0; /* Abstand zwischen den Absätzen */
        }

    .btn {
        display: inline-block;
        padding: 10px 20px; /* Innenabstand */
        margin-top: 10px; /* Abstand nach oben */
        font-size: 16px; /* Schriftgröße */
        text-decoration: none; /* Entfernt Unterstreichung */
        color: white; /* Textfarbe */
        background-color: #007bff; /* Hintergrundfarbe */
        border-radius: 5px; /* Runde Ecken */
        transition: background-color 0.3s; /* Übergangseffekt für Hintergrundfarbe */
    }

        .btn:hover {
            background-color: #0056b3; /* Ändert die Hintergrundfarbe bei Hover */
        }
</style>
